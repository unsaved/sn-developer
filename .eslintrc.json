// This is for checking js files in the sn-developer implementation itself.
// Don't use this for checking ServiceNow scirptles.
{
  "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": ["error", { "code": 100, "ignoreUrls": true }],
    "no-tabs": "error",
    "no-trailing-spaces": "error",
    "camelcase": "warn",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error",
    "semi": "error",
    "no-unreachable-loop": "error",
    "no-use-before-define": "error"
  }
}
